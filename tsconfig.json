{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ],
    "paths": {
      "app/*": [
        "./src/*",
        "./build/*"
      ],
      "config/*": [
        "./config/*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".idea"
  ]
}
